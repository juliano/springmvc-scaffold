<%%@ taglib prefix="form" uri="http://www.springframework.org/tags/form" %>

<% @attributes.each do |att| -%>
<div class="field">
	<%= att.html_label %>:<br />
	<%- if att.boolean? -%>
	<form:checkbox path="<%=att.name%>" />
  <%- else -%>
	<form:input path="<%=att.name%>" />
  <%- end -%>
	<form:errors path="<%=att.name%>" />
</div>

<% end -%>
<div class="actions">
	<button type="submit">send</button>
</div>
