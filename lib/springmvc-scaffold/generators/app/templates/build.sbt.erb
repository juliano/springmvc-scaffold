name := "<%= @project_name %>"

version := "0.0.1"

jetty()

libraryDependencies ++= Seq(
<% Dependencies.compile_scope.each do |dependency| -%>
  "<%= dependency.group %>" % "<%= dependency.name %>" % "<%= dependency.version %>",
<%- end -%>

  // Provided dependencies
<% Dependencies.provided_scope.each do |dependency| -%>
  "<%= dependency.group %>" % "<%= dependency.name %>" % "<%= dependency.version %>" % "provided",
<% end -%>

  // Test dependencies
<% Dependencies.test_scope.each do |dependency| -%>
  "<%= dependency.group %>" % "<%= dependency.name %>" % "<%= dependency.version %>" % "test"<%= "," unless dependency.eql? Dependencies.test_scope.last %>
<% end -%>
)
